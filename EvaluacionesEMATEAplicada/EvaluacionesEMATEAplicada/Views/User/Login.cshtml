@model EvaluacionesEMATEAplicada.Models.UserModel
@{

    ViewBag.Title = "Inicio de sesión";
}

<html>

<head>

    <title>

        @ViewBag.Title

    </title>

    <meta charset="utf-8" />

</head>


<body>

    <div class="text-center">
        <h2> Universidad de Costa Rica</h2>
        <h2>Escuela de Matemática</h2>
        <h3>Departamento de Matemática Aplicada</h3>
        <h4> Respositorio de evaluaciones</h4>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="text-center">
                <img src="~/images/img1.png" width="300" height="300" class="d-inline-block align-top" alt="" loading="lazy"/>
            </div>
        </div>
        <div class="col-md-4">
            <form asp-action="Login" method="post">
                <div class="text-danger">
                    @if(ViewBag.Message!=null) {
                        <p>
                            @ViewBag.Message
                        </p>                    
                    }
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="text-left">
                        <label asp-for="email" class="control-label"></label>
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>

                        <br />
                        <label asp-for="password" class="control-label"></label>
                        <input asp-for="password" class="form-control" />
                        <span asp-validation-for="password" class="text-danger"></span>
                        <br />
                        <input type="submit" class="btn btn-success" value="Ingresar" />
                    </div>
                </div>
            </form>
        </div>
 
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
